# Anumate Infrastructure Environment Variables
# Copy this file to .env.infrastructure and update values

# PostgreSQL Configuration
POSTGRES_PASSWORD=anumate_dev_password
POSTGRES_USER=anumate_admin
POSTGRES_DB=anumate
DATABASE_URL=postgresql://anumate_app:app_password@localhost:5432/anumate

# Redis Configuration
REDIS_PASSWORD=
REDIS_URL=redis://localhost:6379

# NATS Configuration
NATS_USER=anumate_app
NATS_PASSWORD=nats_dev_password
NATS_URL=nats://anumate_app:app_password@localhost:4222

# Vault Configuration
VAULT_ROOT_TOKEN=dev-root-token
VAULT_ADDR=http://localhost:8200
VAULT_TOKEN=dev-root-token

# Network Configuration
COMPOSE_PROJECT_NAME=anumate

# Development Settings
ENVIRONMENT=development
LOG_LEVEL=INFO