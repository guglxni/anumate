# Orchestrator Service Environment Configuration (Example)

# Environment and Application Settings
ANUMATE_ENV=dev
PORTIA_MODE=sdk
ALLOW_PORTIA_HTTP_FALLBACK=false

# Portia SDK Configuration (required - replace with actual values)
PORTIA_API_KEY=your-portia-api-key-here
PORTIA_BASE_URL=https://api.portia.ai
PORTIA_WORKSPACE_ID=your-workspace-id
PORTIA_TIMEOUT_SEC=30

# OpenAI/LLM Configuration (Moonshot Kimi)
OPENAI_API_KEY=your-moonshot-api-key
OPENAI_BASE_URL=https://api.moonshot.cn/v1
OPENAI_MODEL=moonshot-v1-8k

# Service Endpoints
APPROVALS_BASE_URL=http://localhost:8001
RECEIPTS_BASE_URL=http://localhost:8002
CAPTOKENS_BASE_URL=http://localhost:8083
REGISTRY_BASE_URL=http://localhost:8082

# Database Configuration
DATABASE_HOST=127.0.0.1
DATABASE_PORT=5432
DATABASE_USER=anumate_admin
DATABASE_PASSWORD=dev_password
DATABASE_NAME=anumate

# Receipt Service
RECEIPT_SIGNING_KEY=your-base64-encoded-ed25519-key

# Razorpay MCP Configuration
ENABLE_RAZORPAY_MCP=true
RAZORPAY_MCP_MODE=remote
RAZORPAY_MCP_SERVER_NAME=razorpay
RAZORPAY_MCP_URL=https://mcp.razorpay.com/mcp
RAZORPAY_MCP_AUTH=Bearer <base64(key_id:key_secret)>

# For local/stdio mode only:
# RAZORPAY_KEY_ID=rzp_test_...
# RAZORPAY_KEY_SECRET=...
