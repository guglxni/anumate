# Capability Tokens Service Configuration

# Database Configuration
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/anumate
SQL_DEBUG=false

# Ed25519 Keys (generate with anumate-crypto for production)
# ED25519_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----
# ED25519_PUBLIC_KEY=-----BEGIN PUBLIC KEY-----\n...\n-----END PUBLIC KEY-----

# Service Configuration
HOST=0.0.0.0
PORT=8083
DEVELOPMENT=true

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Token Cleanup
TOKEN_CLEANUP_INTERVAL=300  # 5 minutes

# CORS (configure for production)
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]
