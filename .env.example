# Anumate Platform Environment Configuration Template
# Copy this file to .env and fill in your actual values
# =====================================================

# Portia SDK Configuration
# Get your API key from: https://portia.ai/dashboard/api-keys
PORTIA_API_KEY=prt-your-api-key-here

# Moonshot Kimi LLM Configuration (OpenAI-compatible)
# Get your API key from: https://platform.moonshot.cn/
OPENAI_API_KEY=sk-your-moonshot-api-key-here
OPENAI_BASE_URL=https://api.moonshot.cn/v1
OPENAI_MODEL=moonshot-v1-8k

# Service Endpoints (adjust ports if needed)
ORCHESTRATOR_BASE_URL=http://localhost:8090
APPROVALS_BASE_URL=http://localhost:8001
RECEIPTS_BASE_URL=http://localhost:8002
CAPTOKENS_BASE_URL=http://localhost:8083
REGISTRY_BASE_URL=http://localhost:8082

# Receipt Service Signing Key (Ed25519 Base64 Encoded)
# Generate with: python3 -c "from cryptography.hazmat.primitives.asymmetric.ed25519 import Ed25519PrivateKey; from cryptography.hazmat.primitives import serialization; import base64; key = Ed25519PrivateKey.generate(); pem = key.private_bytes(encoding=serialization.Encoding.PEM, format=serialization.PrivateFormat.PKCS8, encryption_algorithm=serialization.NoEncryption()); print(base64.b64encode(pem).decode('ascii'))"
RECEIPT_SIGNING_KEY=your-base64-encoded-ed25519-key-here

# PostgreSQL Database Configuration
DATABASE_HOST=127.0.0.1
DATABASE_PORT=5432
DATABASE_USER=anumate_admin
DATABASE_PASSWORD=dev_password
DATABASE_NAME=anumate

# Redis Configuration
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=

# NATS Configuration
NATS_HOST=127.0.0.1
NATS_PORT=4222

# Vault Configuration
VAULT_HOST=127.0.0.1
VAULT_PORT=8200
VAULT_TOKEN=

# Application Configuration
LOG_LEVEL=INFO
ENVIRONMENT=development
DEBUG=false

# Timeout and Retry Settings
REQUEST_TIMEOUT=30
MAX_RETRIES=3
RETRY_BACKOFF=2.0

# Security Settings
SECRET_KEY=your-secret-key-here
JWT_EXPIRY_HOURS=24

# Docker Compose Settings
COMPOSE_PROJECT_NAME=anumate
POSTGRES_USER=anumate_admin
POSTGRES_PASSWORD=dev_password
POSTGRES_DB=anumate
