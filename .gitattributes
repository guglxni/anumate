# Set default behavior for line endings
* text=auto

# Explicitly declare text files you want to always be normalized and converted
# to native line endings on checkout
*.py text
*.js text
*.ts text
*.json text
*.md text
*.yml text
*.yaml text
*.toml text
*.cfg text
*.conf text
*.ini text
*.sql text

# Declare files that will always have CRLF line endings on checkout
*.bat text eol=crlf
*.cmd text eol=crlf

# Declare files that will always have LF line endings on checkout
*.sh text eol=lf

# Denote all files that are truly binary and should not be modified
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.mov binary
*.mp4 binary
*.mp3 binary
*.flv binary
*.fla binary
*.swf binary
*.gz binary
*.zip binary
*.7z binary
*.ttf binary
*.eot binary
*.woff binary
*.woff2 binary
*.pyc binary
*.pyo binary
*.pyd binary
*.so binary
*.dll binary
*.dylib binary

# Python specific
*.pyx text
*.pxd text
*.pxi text

# Docker
Dockerfile text
*.dockerfile text

# Documentation
*.txt text
*.rtf text

# Configuration files
*.xml text
*.config text
.editorconfig text
.gitattributes text
.gitignore text
.gitconfig text

# Scripts
*.ps1 text
*.fish text
*.zsh text

# Kubernetes and Helm
*.yaml text
*.yml text

# Terraform
*.tf text
*.tfvars text

# Exclude files from export (git archive)
.gitattributes export-ignore
.gitignore export-ignore
.git* export-ignore
*.log export-ignore
*.tmp export-ignore
node_modules/ export-ignore
__pycache__/ export-ignore
*.pyc export-ignore
.pytest_cache/ export-ignore
.coverage export-ignore
