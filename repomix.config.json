{
  "output": {
    "filePath": "build/repomix-output.xml",
    "style": "xml"
  },
  "include": ["**/*"],
  "ignore": {
    "useGitignore": true,
    "useDefaultPatterns": true,
    "customPatterns": [
      "archive/legacy-tests/**",
      "logs/**/*.log",
      ".env",
      ".env.local"
    ]
  },
  "security": {
    "enableSecurityCheck": true
  }
}
